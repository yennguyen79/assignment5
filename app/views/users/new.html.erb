<h1 id="heading">Sign Up </h1>
<div class="card register-card">
  <div class="card-header">
    <h1 class="card-heading">Register<h1>
  </div>
  <div class="card-block">
  <% if @user.errors.present? %>
    <div id="error_explanation" class"alert alert-danger">
      <strong> Cannot save due to <%= pluralize(@user.errors.count, "error") %>:</strong>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
       </ul>
      </div>  
  <% end %>
  <%= form_for @user do |f| %>
    <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder:"Name" %>
      </div>

      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder:"Email" %>
      </div>

      <div class="form-group">
        <%= f.text_field :password, class: "form-control", placeholder:"Password" %>
      </div>

      <div class="form-group">
        <%= f.text_field :password_confirmation, class: "form-control",placeholder:"Password Confirmation" %>
      </div>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>